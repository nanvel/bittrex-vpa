{% extends "base.j2" %}
{% block head %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.bundle.min.js"></script>
{% endblock %}
{% block title %}Bubbles{% endblock %}
{% block content %}
<div style="height: 400px;"><canvas id="bubbles_chart"></canvas></div>
<script>
    var ctx = document.getElementById("bubbles_chart").getContext("2d");
    var bubblesChart = new Chart(ctx,{
        "type":"bubble",
        "data":{
            "datasets": [
                {
                    "label":"Volume buy bubbles",
                    "data": {{ data_buy|safe }},
                    "backgroundColor":"rgb(255, 99, 132)"
                },
                {
                    "label":"Volume sell bubbles",
                    "data": {{ data_sell|safe }},
                    "backgroundColor":"rgb(75, 192, 192)"
                }
            ]
        },
        options: {
            scales: {
                xAxes: [{
                    type: 'time'
                }]
            },
            animation: false
        }
    });
</script>
{% endblock %}
